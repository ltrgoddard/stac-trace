#!/usr/bin/env bash
# STAC Trace - DuckDB Pipeline Version
# Usage: ./stac-trace [days] [host] [bbox]

set -euo pipefail

# Default values
DAYS="${1:-7}"
HOST="${2:-oneatlas}"
BBOX="${3:-}"

echo "üõ∞Ô∏è STAC Trace - Finding surveillance hotspots"
echo "üìÖ Days: $DAYS, Host: $HOST, BBox: ${BBOX:-'Global'}"
echo

# Run the DuckDB pipeline
make HOST="$HOST" DAYS="$DAYS" BBOX="$BBOX" all

echo
echo "‚úÖ Analysis complete! Check hotspots.geojson for results"